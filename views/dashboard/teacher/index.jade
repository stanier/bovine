block head
    script(src='/js/dashboard/teacher.js')
    
block dashboard
    .tab-content
        .tab-pane.active#classes(ng-controller='teacherModule')
            h3 Classes
            .well.col-sm-12
                p(ng-hide='data')
                    | No classes found.  Please check with a manager or admin to make sure that you are assigned as teacher to a class
                table.table(ng-show='data')
                    thead: tr
                        td #
                        td Name
                        td Website
                        td Grade
                        td
                    tbody: tr(ng-repeat='class in data')
                        td {{ $index + 1 }}
                        td {{ class.name }}
                        td {{ class.website }}
                        td {{ class.grade }}
                        td.btn-group
                            button.btn.btn-primary(ng-click='edit(class.id)' href='#class' data-toggle='tab'): .fa.fa-gear
        include class