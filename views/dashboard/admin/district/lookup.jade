.tab-pane.active#districtLookup(ng-controller='findDistrict')
    .well.col-sm-12
        form(novalidate)
            .col-sm-3: input.form-control(ng-model='name'    placeholder='Name'    )
            .col-sm-3: input.form-control(ng-model='zipcode' placeholder='Zip code')
            .col-sm-3: input.form-control(ng-model='city'    placeholder='City'    )
            .col-sm-3: input.form-control(ng-model='state'   placeholder='State'   )
            .col-sm-3: input.form-control(ng-model='country' placeholder='country' )
            
            .col-sm-6: button.form-control(type='submit' ng-click='lookup(name, type)') Search
    .well.col-sm-12.ng-hide(ng-show='data')
        table.table
            thead: tr
                td #
                td Name
                td Website
                td Zip code
                td City
                td State
                td Country
                td
            tbody: tr(ng-repeat='record in data')
                td {{ $index + 1     }}
                td {{ record.name    }}
                td {{ record.website }}
                td {{ record.zipcode }}
                td {{ record.city    }}
                td {{ record.state   }}
                td {{ record.country }}
                td.btn-group
                    button.btn.btn-primary(ng-click='shareTarget(record.id)' data-toggle='modal' data-target='#districtEdit'): .fa.fa-gear
                    button.btn.btn-primary(ng-click='remove(record.id)'): .fa.fa-remove