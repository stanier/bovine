extends /page

block content
    script(src='/js/home.js')
    div(ng-controller='home' ng-init='getEnrolled()')
        include /sidebar
        .col-md-9.col-xs-12
            h3 Enrolled classes:
            .panel.panel-primary(ng-repeat='class in enrolled')
                .panel-heading
                    h4.panel-title {{ class.name }}
                .panel-body
                    p {{ class.desc }}
                    a(href='{{ class.website }}') {{ class.website }}
                .panel-footer.clearfix
                    p.pull-left Instructed by {{ class.teacher.name }}
                    a.btn.btn-primary.pull-right(href='/class/{{ class._id }}') Go to class