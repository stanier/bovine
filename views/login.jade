extends page

block content
    .col-sm-4.col-sm-offset-4
        if !(message == '')
            .alert.alert-info #{info}
        if !(error == '')
            .alert.alert-danger #{error}
        .well
            form(action='/login', method='post')
                div
                    h3 Username:
                    input.form-control(type='text', name='username')
                div
                    h3 Password:
                    input.form-control(type='password', name='password')
                div
                    .checkbox
                        label
                            input#rememberme(type='checkbox' name='rememberme')
                            p Remember me
                div
                    button.form-control(type='submit', value='Submit') Submit